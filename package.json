
{
  "name": "novamedika-prod",
  "scripts": {
    "prod:up": "docker-compose -f docker-compose.traefik.prod.yml up -d --build",
    "prod:down": "docker-compose -f docker-compose.traefik.prod.yml down",
    "prod:logs": "docker-compose -f docker-compose.traefik.prod.yml logs -f",
    "prod:restart": "docker-compose -f docker-compose.traefik.prod.yml restart",
    "prod:restart-backend": "docker-compose -f docker-compose.traefik.prod.yml restart backend",
    "prod:restart-frontend": "docker-compose -f docker-compose.traefik.prod.yml restart frontend",
    "prod:ps": "docker-compose -f docker-compose.traefik.prod.yml ps",
    "prod:build": "docker-compose -f docker-compose.traefik.prod.yml build --no-cache"
  }
}
